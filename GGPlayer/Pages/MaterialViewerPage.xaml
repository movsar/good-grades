<Page x:Class="GGPlayer.Pages.MaterialViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GGPlayer.Pages"
      xmlns:shared="clr-namespace:Shared.Controls;assembly=Shared"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialViewerPage">

    <Page.Background>
        <ImageBrush ImageSource="pack://application:,,,/Shared;component/Images/fon_segment.jpg" Stretch="UniformToFill"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" 
               Source="pack://application:,,,/Shared;component/Images/ornament_up_segment.png"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" />

        <ContentControl Grid.Row = "1" 
                        x:Name="ucRoot" 
                        VerticalAlignment="Stretch"/>
    </Grid>
</Page>
