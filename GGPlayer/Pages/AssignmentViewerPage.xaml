<Page x:Class="GGPlayer.Pages.Assignments.AssignmentViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GGPlayer.Pages.Assignments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectionAssignmentPage">

    <Grid>
        <Image  Source="pack://application:,,,/Shared;component/Images/Buttons/retry.png" 
                Height="100" Width="150"
                Cursor="Hand"
                x:Name="btnRetry"
                MouseUp="btnRetry_MouseUp"
                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20" 
                Stretch="UniformToFill" />
        
        <Image  Source="pack://application:,,,/Shared;component/Images/Buttons/check.png" 
             Height="100" Width="150"
             Cursor="Hand"
             x:Name="btnCheck"
             MouseUp="btnCheck_MouseUp"
             HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" 
             Stretch="UniformToFill" />
        
        <StackPanel x:Name="ucRoot"/>
    </Grid>
</Page>
