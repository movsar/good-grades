<Window x:Class="Shared.Viewers.SelectingViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Correct" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="#FFF1F1F1"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" x:Name="spQuestion" VerticalAlignment="Center" HorizontalAlignment="Center">
        
        </StackPanel>

        <Button Grid.Row="1" HorizontalAlignment="Center" Margin="10" Height="50" Width="200" FontWeight="Bold" Content="Проверить" Click="btnCheck_Click"/>
    </Grid>
</Window>
