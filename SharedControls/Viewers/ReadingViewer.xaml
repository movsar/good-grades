<Window x:Class="Shared.Viewers.ReadingViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shared.Viewers"
        mc:Ignorable="d" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        >
    
    <Grid>

        <FlowDocumentPageViewer>
            <FlowDocument x:Name="flowDocument">
                <Paragraph x:Name="flowImageParagraph">
                    <Figure>
                        <BlockUIContainer>
                            <Image x:Name="imgMain" />
                        </BlockUIContainer>
                    </Figure>
                </Paragraph>
                <Paragraph x:Name="flowContentParagraph">
                </Paragraph>
            </FlowDocument>
        </FlowDocumentPageViewer>

    </Grid>

</Window>
