<Window x:Class="Shared.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shared"
        mc:Ignorable="d"
        Title="Downloading" Height="150" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Text="Downloading..." FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <ProgressBar x:Name="DownloadProgressBar" Height="25" Width="300" Margin="50,60,50,0" VerticalAlignment="Top"/>
        <Button Content="Cancel" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="CancelButton_Click"/>
    </Grid>
</Window>
