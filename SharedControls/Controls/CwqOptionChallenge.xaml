<UserControl x:Class="Shared.Controls.CwqChallenge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shared.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="450"
             Width="450" Height="70">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image x:Name="imgMain" Grid.Column="0" Width="100" Height="100"></Image>

        <Canvas x:Name="cnvDropZone" Grid.Column="1" Background="Aquamarine" Width="320" Height="60">

        </Canvas>

    </Grid>
</UserControl>
