<UserControl x:Class="Shared.Controls.StatisticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shared.Controls.Assignments"
             xmlns:shared="clr-namespace:Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="txtCorrectAnswers" FontSize="20" />
                <TextBlock x:Name="txtIncorrectAnswers" FontSize="20" />

                <Button x:Name="btnRetry" Content="{x:Static shared:GgLocalization.Retry}" Click="btnRetry_Click" Visibility="Collapsed" />
                <Button x:Name="btnNext" Content="{x:Static shared:GgLocalization.Next}" Click="btnNext_Click" Visibility="Collapsed" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
