<UserControl x:Class="Shared.Controls.Assignments.SelectionAssignmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shared.Controls.Assignments"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
        <StackPanel VerticalAlignment="Center">

            <!-- Варианты ответов по центру экрана -->
            <StackPanel  x:Name="spOptions"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            </StackPanel>

            <!-- Кнопка проверки по центру снизу -->
        <Button 
                Content="Проверить" 
                Click="btnCheck_Click"
                FontSize="30"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Width="600" 
                Height="70" 
                Margin="0 200 0 0"
                Background="Gray" 
                Foreground="White"
                FontWeight="SemiBold"
                BorderBrush="#FF357ABD"
                BorderThickness="2"
                Padding="10">          
            </Button>
        </StackPanel>
    
</UserControl>
