<UserControl x:Class="Shared.Controls.Assignments.BuildingAssignmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:shared="clr-namespace:Shared;assembly=Shared"
             xmlns:local="clr-namespace:Shared.Controls.Assignments"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">

            <!-- Заголовок задания -->
            <TextBlock
                Text="{Binding TaskTitle}" 
                Style="{StaticResource LargeHeaderStyle}" 
                HorizontalAlignment="Center"
                FontSize="36"
                Margin="20"/>

            <!-- Контент задания (предложение и варианты) -->
            <StackPanel
                 x:Name="spItems" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center">
            </StackPanel>
      
        </StackPanel>
    </Grid>
</UserControl>
