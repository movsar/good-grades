<UserControl x:Class="Shared.Controls.Assignments.BuildingAssignmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:shared="clr-namespace:Shared;assembly=Shared"
             xmlns:local="clr-namespace:Shared.Controls.Assignments"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel x:Name="spItems">
        <StackPanel x:Name="spItemSource" Orientation="Horizontal" Margin="0,5,0,5" />
        <StackPanel x:Name="spItemDropZone" Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Stretch" />
    </StackPanel>
    
</UserControl>
