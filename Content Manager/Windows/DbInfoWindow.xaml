<Window x:Class="Content_Manager.Windows.DbInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Manager.Windows" xmlns:usercontrols="clr-namespace:Content_Manager.UserControls"
        mc:Ignorable="d"
        xmlns:translations="clr-namespace:Shared.Translations;assembly=Shared"
        Title="{x:Static translations:Ru.DataBase}" Height="300" Width="430" ResizeMode="NoResize" MinHeight="250" MinWidth="450"
        WindowState="Maximized">
    <Grid>

        <usercontrols:DbInformation 
                Grid.Column="1"
                x:Name="ucDbInformation"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderThickness="1" />
    </Grid>
</Window>
