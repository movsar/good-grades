<Window x:Class="Content_Manager.Windows.Editors.MatchingAssignmentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Content_Manager.Windows.Editors"
        xmlns:translations="clr-namespace:Shared.Translations;assembly=Shared"
        mc:Ignorable="d"
        Title="{x:Static translations:Ru.MatchingTaskName}" Height="450" Width="800" MinHeight="250" MinWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"  Margin="10,5,10,0" Orientation="Vertical">
            <TextBlock Style="{StaticResource HeaderStyle}">
               Заголовок
            </TextBlock>

            <TextBox 
               x:Name="txtTitle"
               Style="{StaticResource InputFieldStyle}" 
               TextChanged="txtTitle_TextChanged"
               Text="{x:Static translations:Ru.MatchingTaskText}">
            </TextBox>
          
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="5" x:Name="spItems"></StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
