<UserControl x:Class="Content_Manager.UserControls.SegmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Content_Manager.UserControls"
             xmlns:segmenttabs="clr-namespace:Content_Manager.UserControls.SegmentTabs"
             xmlns:translations="clr-namespace:Shared.Translations;assembly=Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl Grid.Column="1" Grid.Row="0" x:Name="tbcMain">
            <TabItem Header="{x:Static translations:Ru.Chapter}">
                <segmenttabs:SegmentInfoTab/>
            </TabItem>
            <TabItem Header="{x:Static translations:Ru.Listening}">
                <segmenttabs:ListeningAssignmentsTab/>
            </TabItem>
            <TabItem Header="{x:Static translations:Ru.Tasks}">
                <segmenttabs:TaskAssignmentsTab/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
