<UserControl x:Class="Content_Manager.UserControls.SegmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Content_Manager.UserControls" xmlns:tabs="clr-namespace:Content_Manager.UserControls.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl Grid.Column="1" Grid.Row="0" x:Name="tbcMain">
            <TabItem Header="Информация о Разделе">
                <local:SegmentInfoTab/>
            </TabItem>
            <TabItem Header="Чтение">
                <local:ReadingTab/>
            </TabItem>
            <TabItem Header="Аудирование">
                <local:ListeningTab/>
            </TabItem>
            <TabItem Header="Задачи">
                <tabs:QuizsTab/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
