<UserControl x:Class="Content_Manager.UserControls.SegmentTabs.QuizsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:quiztabs="clr-namespace:Content_Manager.UserControls.QuizTabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl Margin="0 2 0 0">
            <TabItem Header="Личности">
                <quiztabs:CelebrityWordsTab/>
            </TabItem>
            <TabItem Header="Выбор пословицы">
                <quiztabs:ProverbSelectionTab/>
            </TabItem>
            <TabItem Header="Построение пословицы">
                <quiztabs:ProverbBuilderTab/>
            </TabItem>
            <TabItem Header="Пробелы">
                <quiztabs:GapFillerTab/>
            </TabItem>
            <TabItem Header="Тест">
                <quiztabs:TestingTab/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
