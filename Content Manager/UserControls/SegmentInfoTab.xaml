<UserControl x:Class="Content_Manager.UserControls.SegmentInfoTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Content_Manager.UserControls" xmlns:models="clr-namespace:Data.Models;assembly=Data" d:DataContext="{d:DesignInstance Type=models:ModelBase}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="SegmentInfo">
    <Grid>
        <TextBox x:Name="txtName"                 
                 HorizontalAlignment="Left" 
                 Margin="47,43,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding SelectedSegment.Id}"
                 VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
