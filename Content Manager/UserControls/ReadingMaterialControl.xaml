<UserControl x:Class="Content_Manager.UserControls.ReadingMaterialControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Content_Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ucReadingMaterialControl">
    <Grid>
        <StackPanel Margin="0 10 0 0" Orientation="Horizontal" Height="30">
            <TextBox Margin="10 0 0 0" Width="300" Text="{Binding Material.Title}"/>
            <Button Margin="10 0 0 0" Padding="7 0 7 0" Content="Загрузить из файла"/>
            <Button Margin="10 0 0 0" Padding="7 0 7 0" Content="Просмотр1"/>
        </StackPanel>
    </Grid>
</UserControl>
